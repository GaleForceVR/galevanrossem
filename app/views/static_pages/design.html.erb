<div class="main-content">
  <article>

    <div class="portfolio-title">
      <h1>Visual Design and Photography Portfolio</h1>
    </div>
    <% if @design_posts %>
    <% @design_posts.each do |post| %>
      <div class="center-content portfolio visual">
        <div class="height-fix-image-wrapper">
          <div class="portfolio-image visual-fix">
            <%= image_tag post.image.url(:xtr_large).to_s, class: "design-image" %>
          </div>
        </div>
        <h3><%= post.title %></h3> 
        <p><%= post.content.html_safe %></p>
      </div>

      <div class="right-gutter">
        
      </div>
    <% end %>
    <% end %>

  </article>
</div>
<%= render partial: "layouts/bio" %>
<div class="clear-footer"></div>